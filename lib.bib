@article{LAI16,
abstract = {Human societies rely on food reserves and the importation of agricultural goods as means to cope$\backslash$nwith crop failures and associated food shortage. While food trade has been the subject of intensive$\backslash$ninvestigations in recent years, food reserves remain poorly quantified. It is unclear how food$\backslash$nstocks are changing and whether they are declining. In this study we use food stock records for 92$\backslash$nproducts to reconstruct 50 years of aggregated food reserves, expressed in caloric equivalent$\backslash$n(kcal), at the regional and global scales. A detailed statistical analysis demonstrates that the$\backslash$noverall regional and global per-capita food stocks are stationary, challenging a widespread$\backslash$nimpression that food reserves are shrinking. We develop a statistically-sound stochastic$\backslash$nrepresentation of stock dynamics and take the stock-halving probability as a measure of the natural$\backslash$nvariability of the process. We find that there is a 20{\%} probability that the global per-capita$\backslash$nstocks will be halved by 2050. There are, however, some strong regional differences: Western Europe$\backslash$nand the region encompassing North Africa and the Middle East have smaller halving probabilities and$\backslash$nsmaller per-capita stocks, while North America and Oceania have greater halving probabilities and$\backslash$ngreater per-capita stocks than the global average. Africa exhibits low per-capita stocks and$\backslash$nrelatively high probability of stock halving by 2050, which reflects a state of higher food$\backslash$ninsecurity in this continent.},
author = {Laio, Francesco and Ridolfi, Luca and Paolo, D'Odorico},
doi = {10.1088/1748-9326/11/3/035010},
file = {:home/cotto/literatur/agrar/foodSecurity/LAI16.pdf:pdf},
issn = {1748-9326},
journal = {Environmental Research Letters},
keywords = {food crises,food security,grain stock dynamics,stochastic modeling},
number = {3},
pages = {35010},
title = {{The past and future of food stocks}},
url = {http://stacks.iop.org/1748-9326/11/i=3/a=035010},
volume = {11},
year = {2016}
}
