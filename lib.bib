journal = {Food Policy},
keywords = {Food crisis,Food policy,Food prices,Food riots,Social conflict,Sub-Saharan Africa},
pages = {28--39},
title = {{Explaining the African food riots of 2007-2008: An empirical analysis}},
url = {http://dx.doi.org/10.1016/j.foodpol.2012.12.007},
volume = {39},
year = {2013}
}
